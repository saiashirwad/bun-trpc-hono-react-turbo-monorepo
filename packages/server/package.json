{
  "name": "@template/server",
  "private": true,
  "main": "dist/exports.js",
  "types": "dist/exports.d.ts",
  "exports": {
    ".": {
      "types": "./dist/exports.d.ts",
      "default": "./dist/exports.js"
    }
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "tsc --build && bun build ./src/index.ts --outdir ./dist",
    "start": "NODE_ENV=production bun run ./dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules .turbo public"
  },
  "dependencies": {
    "@hono/node-server": "^1.0.0",
    "@hono/trpc-server": "^0.3.4",
    "@template/schemas": "workspace:*",
    "@template/types": "workspace:*",
    "@trpc/server": "^10.0.0",
    "hono": "^3.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  }
}