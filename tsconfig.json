{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"baseUrl": ".",
		"resolveJsonModule": true,
		"allowJs": true,
		"incremental": true
	},
	"include": ["./scripts/**/*.ts"],
	"exclude": ["**/dist", "**/node_modules", "**/.turbo"]
}
