    "start:prod": "NODE_ENV=production turbo run start --filter=@template/server"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.14",
    "turbo": "^1.12.0",
    "typescript": "^5.0.0"
  }
}