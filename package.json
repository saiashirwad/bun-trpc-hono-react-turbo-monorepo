{
  "name": "template",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "start": "bun run build && bun run start:prod",
    "start:prod": "export NODE_ENV=production && cd packages/server && bun run start"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "turbo": "^1.12.0"
  }
}